.container {
  padding: 20rpx;
  min-height: 100vh;
  background-color: #f7f7f7;
}

.header-buttons {
  display: flex;
  justify-content: space-between;
  margin: 20rpx 0;
}

.clear-all {
  padding: 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
  text-align: center;
  color: #e64340;
  font-weight: bold;
  flex: 1;
  margin-right: 10rpx;
}

.debug-btn {
  padding: 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
  text-align: center;
  color: #1890ff;
  font-weight: bold;
  flex: 1;
  margin-left: 10rpx;
}

.favorites-list {
  margin-bottom: 40rpx;
}

.favorite-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 25rpx;
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
}

.question-content {
  flex: 1;
  padding-right: 20rpx;
  font-size: 28rpx;
  color: #333;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.remove-btn {
  padding: 10rpx 20rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
  color: #888;
  font-size: 24rpx;
  border: 1rpx solid #eee;
}

.empty-tip {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 60vh;
}

.empty-icon {
  margin-bottom: 30rpx;
}

.icon-star {
  font-size: 120rpx;
  color: #FFD700;
  opacity: 0.5;
}

.empty-text {
  color: #999;
  font-size: 32rpx;
  margin-bottom: 10rpx;
}

.empty-subtext {
  color: #BBB;
  font-size: 26rpx;
}