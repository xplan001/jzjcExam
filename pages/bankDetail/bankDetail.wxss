.container {
  padding: 20rpx;
  box-sizing: border-box;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

/* Âä†ËΩΩÊåáÁ§∫Âô®Ê†∑Âºè */
.loading-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 300rpx;
  width: 100%;
  margin: 100rpx 0;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #ff7d00;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 30rpx;
  font-size: 28rpx;
  color: #666666;
}

/* È™®Êû∂Â±èÊ†∑Âºè */
.skeleton-container {
  padding: 30rpx;
  width: 100%;
  box-sizing: border-box;
}

.skeleton-item {
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 200% 100%;
  animation: skeleton-loading 1.5s infinite;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}

@keyframes skeleton-loading {
  0% { background-position: 200% 0; }
  100% { background-position: -200% 0; }
}

.skeleton-title {
  height: 40rpx;
  width: 40%;
}

.skeleton-desc {
  height: 80rpx;
  width: 100%;
}

.skeleton-stats {
  display: flex;
  justify-content: space-between;
  margin: 20rpx 0;
}

.skeleton-stat {
  height: 60rpx;
  width: 30%;
}

.skeleton-question {
  height: 100rpx;
  width: 100%;
}

