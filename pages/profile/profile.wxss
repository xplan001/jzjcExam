.container {
  padding: 20rpx;
  box-sizing: border-box;
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 用户信息区域 */
.user-info {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background-color: #fff;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 30rpx;
  background-color: #eee;
}

.user-details {
  flex: 1;
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  display: block;
}

.user-id {
  font-size: 24rpx;
  color: #666;
}

.edit-btn {
  background-color: #ff7a00;
  color: white;
  border: none;
  padding: 15rpx 30rpx;
  border-radius: 30rpx;
  font-size: 26rpx;
}

/* 数据统计卡片 */
.stats-cards {
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.stat-card {
  flex: 1;
  text-align: center;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 20rpx;
  margin: 0 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.stat-number {
  font-size: 40rpx;
  font-weight: bold;
  color: #ff7a00;
  margin-bottom: 10rpx;
  display: block;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

/* 内容区域 */
.content-section {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 15rpx;
  border-bottom: 1rpx solid #eee;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
}

.view-all {
  font-size: 24rpx;
  color: #ff7a00;
}

/* 收藏列表 */
.favorite-list {
  margin-bottom: 40rpx;
}

.favorite-item {
  padding: 20rpx;
  border-radius: 15rpx;
  background-color: #f9f9f9;
  margin-bottom: 15rpx;
}

.favorite-text {
  font-size: 28rpx;
  line-height: 40rpx;
  margin-bottom: 10rpx;
  display: block;
}

.favorite-type {
  font-size: 22rpx;
  color: #666;
  background: #eee;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
}

/* 历史记录 */
.history-list {
}

.history-item {
  padding: 20rpx;
  border-radius: 15rpx;
  background-color: #f9f9f9;
  margin-bottom: 15rpx;
}

.history-date {
  font-size: 22rpx;
  color: #999;
  margin-bottom: 10rpx;
  display: block;
}

.history-text {
  font-size: 28rpx;
  line-height: 40rpx;
  margin-bottom: 10rpx;
  display: block;
}

.history-result {
  font-size: 24rpx;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
}

.history-result.correct {
  color: #07c160;
  background: #f0fff4;
}

.history-result.incorrect {
  color: #f53f3f;
  background: #fff1f0;
}

/* 空状态提示 */
.empty-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
  color: #ccc;
}

.empty-tip text {
  margin-top: 20rpx;
  font-size: 28rpx;
}