.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  margin-bottom: 20rpx;
}

.btn-container {
  display: flex;
  align-items: center;
}

.debug-btn {
  font-size: 28rpx;
  color: #1890ff;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  background-color: rgba(24, 144, 255, 0.1);
  margin-right: 10rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.clear-btn {
  font-size: 28rpx;
  color: #ff6b6b;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  background-color: rgba(255, 107, 107, 0.1);
}

.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 200rpx;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 30rpx;
  color: #999;
}

.history-list {
  padding-bottom: 30rpx;
}

.history-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.item-content {
  flex: 1;
  margin-right: 20rpx;
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.item-title {
  font-size: 30rpx;
  color: #333;
  line-height: 1.4;
  max-width: 400rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.item-status {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  margin-left: 10rpx;
  white-space: nowrap;
}

.correct {
  color: #52c41a;
  background-color: rgba(82, 196, 26, 0.1);
}

.wrong {
  color: #ff4d4f;
  background-color: rgba(255, 77, 79, 0.1);
}

.item-info {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #999;
}

.delete-btn {
  padding: 10rpx;
}