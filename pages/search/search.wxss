.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
  box-sizing: border-box;
}

/* 搜索框样式 */
.search-container {
  display: flex;
  margin-bottom: 30rpx;
}

.search-input-container {
  flex: 1;
  display: flex;
  align-items: center;
  background-color: #fff;
  border-radius: 40rpx;
  padding: 0 20rpx;
  margin-right: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.search-icon {
  color: #999;
  margin-right: 10rpx;
}

.search-input {
  flex: 1;
  height: 70rpx;
  font-size: 28rpx;
}

.clear-btn {
  color: #999;
  font-size: 36rpx;
  height: 70rpx;
  line-height: 70rpx;
}

.search-btn {
  width: 120rpx;
  height: 70rpx;
  background-color: #07c160;
  color: #fff;
  font-size: 28rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 搜索结果样式 */
.results-container {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.results-title {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 10rpx;
  border-bottom: 1rpx solid #eee;
}

.result-list {
}

.result-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.result-item:last-child {
  border-bottom: none;
}

.result-text {
  font-size: 28rpx;
  color: #333;
  line-height: 44rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.result-type {
  display: inline-block;
  font-size: 24rpx;
  color: #07c160;
  margin-top: 10rpx;
}

/* 搜索建议样式 */
.search-suggestions {
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 30rpx 0 20rpx;
}

.section-title {
  font-size: 28rpx;
  color: #666;
}

.history-tags,
.hot-tags {
  display: flex;
  flex-wrap: wrap;
}

.history-tag,
.hot-tag {
  background-color: #fff;
  padding: 15rpx 30rpx;
  border-radius: 40rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  font-size: 26rpx;
  color: #333;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.hot-tag {
  color: #07c160;
}