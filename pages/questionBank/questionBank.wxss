.container {
  padding: 20rpx;
  box-sizing: border-box;
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 页面标题 */
.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  text-align: center;
}

/* 搜索框样式 */
.search-box {
  display: flex;
  align-items: center;
  background: #fff;
  border-radius: 30rpx;
  padding: 12rpx 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.search-box input {
  flex: 1;
  height: 60rpx;
  font-size: 28rpx;
  padding-left: 10rpx;
}

.search-icon {
  color: #999;
  margin-left: 10rpx;
}

/* 题库列表样式 */
.bank-list {
  height: calc(100vh - 220rpx);
}

.bank-item {
  padding: 30rpx;
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
  transition: transform 0.2s ease;
}

.bank-item:active {
  transform: scale(0.98);
}

.bank-info {
  display: flex;
  flex-direction: column;
}

.bank-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.bank-description {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 20rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.bank-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 10rpx;
}

.bank-count {
  font-size: 24rpx;
  color: #ff7a00;
  background: #fff0e0;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
}

/* 全局错误提示条 */
.error-bar {
  background: #fff2f0;
  border: 2rpx solid #ffccc7;
  border-radius: 10rpx;
  padding: 16rpx 20rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.error-text {
  color: #f5222d;
  font-size: 26rpx;
}

.refresh-all-btn {
  background: #1890ff;
  color: #fff;
  font-size: 24rpx;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  line-height: 1.5;
}

.bank-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

/* 状态指示器 */
.status-indicator {
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

/* 加载中状态 */
.loading {
  display: flex;
  align-items: center;
  color: #1890ff;
}

.loading-icon {
  margin-right: 8rpx;
}

.loading-text {
  font-size: 24rpx;
}

/* 加载成功状态 */
.success {
  color: #52c41a;
}

.success-icon {
  vertical-align: middle;
}

/* 加载失败状态 */
.error {
  display: flex;
  align-items: center;
  color: #f5222d;
}

.error-icon {
  margin-right: 8rpx;
}

.refresh-btn {
  background: #fff;
  color: #1890ff;
  border: 2rpx solid #1890ff;
  font-size: 24rpx;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
  line-height: 1.5;
  margin-left: 10rpx;
}